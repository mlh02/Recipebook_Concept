@model IEnumerable<RecipeProject.Models.Book>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBM)
            </th>
            <th>
            <th>
            <a onclick="showInPopup('@Url.Action("AddOrEdit","Book",null,Context.Request.Scheme)','New Book')" class="btn btn-success text-white"><i class="fas fa-random"></i>New Book</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBM)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Book",new {id = item.Id },Context.Request.Scheme)','Update Book')" class="btn btn-info text-white"> Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                        <input type="submit" value="Delete" class="btn btn-danger" />

                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
